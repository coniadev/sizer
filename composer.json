{
    "name": "conia/sizer",
    "description": "On the fly image resizing and cropping",
    "type": "library",
    "license": "MIT",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Conia\\Sizer\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Conia\\Sizer\\Tests\\": "tests"
        }
    },
    "require": {
        "php": ">=8.1",
        "ext-random": "*"
    },
    "require-dev": {
        "dealerdirect/phpcodesniffer-composer-installer": "^1",
        "pestphp/pest": "^1",
        "vimeo/psalm": "^5.5"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
