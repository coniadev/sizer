{
    "name": "conia/image",
    "description": "On the fly image resizing and cropping",
    "type": "library",
    "license": "MIT",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require-dev": {
        "phpunit/phpunit": "^9",
        "pestphp/pest": "^1",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7.2",
        "vimeo/psalm": "^5"
    },
    "require": {
        "php": ">=8.1"
    },
    "autoload": {
        "psr-4": {
            "Conia\\Image\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Conia\\Image\\Tests\\": "tests"
        }
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
